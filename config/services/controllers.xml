<?xml version="1.0" encoding="UTF-8"?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="app.infrastructure.controller.add_beer_action" class="App\Infrastructure\Controller\AddBeerAction">
            <argument type="service" id="prooph_service_bus.app_command_bus" />
        </service>

        <service id="app.infrastructure.controller.register_connoisseur_action" class="App\Infrastructure\Controller\RegisterConnoisseurAction">
            <argument type="service" id="prooph_service_bus.app_command_bus" />
            <argument type="service" id="App\Infrastructure\Security\ConnoisseurPasswordHasher" />
        </service>

        <service id="app.infrastructure.controller.browse_beers_action" class="App\Infrastructure\Controller\BrowseBeersAction">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="serializer" />
        </service>
    </services>
</container>
