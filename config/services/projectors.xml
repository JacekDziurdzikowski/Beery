<?xml version="1.0" encoding="UTF-8"?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service class="App\Infrastructure\Projection\BeerProjection">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <tag name="prooph_service_bus.app_event_bus.route_target" message_detection="true" />
        </service>

        <service class="App\Infrastructure\Projection\ConnoisseurRegisteredProjector">
            <argument type="service" id="App\Infrastructure\Doctrine\Repository\ConnoisseurViewORMRepository" />
            <tag name="prooph_service_bus.app_event_bus.route_target" message_detection="true" />
        </service>
    </services>
</container>
