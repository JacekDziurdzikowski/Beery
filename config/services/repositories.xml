<?xml version="1.0" encoding="UTF-8"?>
<container
        xmlns="http://symfony.com/schema/dic/services"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <defaults public="true" />

        <service id="app.infrastructure.doctrine.repository.beers_orm_repository" class="App\Infrastructure\Doctrine\Repository\BeersORMRepository">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <service id="app.infrastructure.doctrine.repository.connoisseur_orm_repository" class="App\Infrastructure\Doctrine\Repository\ConnoisseurORMRepository">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>
</container>
